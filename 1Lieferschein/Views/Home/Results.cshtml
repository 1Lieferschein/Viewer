@model _1Lieferschein.Models.DeliveryNotes.DeliveryNoteUbl2

@{
    ViewData["Title"] = "Ergebnis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lieferschein</h1>

@{ 
    var count = 0;
    if (Model.DespatchAdvice2 == null) { count = 1; } else { count = 2; }
}

<div class="container">
    <div class="row">
        @if (count == 2)
        {
            <div class="col col-lg-6">
                @{
                    await Html.RenderPartialAsync("PageLieferschein", Model.DespatchAdvice1);
                }
            </div>
            @if (Model.DespatchAdvice2 != null)
            {
                <div class="col col-lg-6 border-left">
                    @{
                        await Html.RenderPartialAsync("PageLieferschein", Model.DespatchAdvice2);
                    }
                </div>
            }
        }
        else
        {
            <div class="col col-lg-12">
                @{
                    await Html.RenderPartialAsync("PageLieferschein", Model.DespatchAdvice1);
                }
            </div>
        }
    </div>
</div>
